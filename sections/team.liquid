{{ 'team.css' | asset_url | stylesheet_tag }}
{{ 'section.css' | asset_url | stylesheet_tag }}

{% render 'section-padding' %}

<div class="section-{{ section.id }}-padding color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <div class="layout_12col">
      <div class="section_heading-wrap">
        {% render 'tag-component', tag_content: section.settings.tag_content %}
        <h2>{{ section.settings.heading }}</h2>
      </div>
      <div class="section_subheading-wrap subtitle">
        {{ section.settings.subheading }}
      </div>
      <div class="team_list">
        {% for member in shop.metaobjects.team_member.values %}
          {% if member.is_member %}
            <div class="team_item">
              <div class="team_photo">
                {%- if member.photo != blank -%}
                  {%- capture sizes -%}
                  (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                  (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                {%- endcapture -%}
                  {{
                    member.photo
                    | image_url: width: 535
                    | image_tag: sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
                  }}
                {%- else -%}
                  {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </div>
              <div class="team_info">
                <h3 class="team_name">
                  {{ member.name }}
                </h3>
                <div class="team_title">
                  {{ member.title }}
                </div>
              </div>
              <div class="team_description">
                {{ member.description | metafield_tag }}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Команда",
  "tag": "section",
  "class": "section_team",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Page heading",
      "label": "Заглавие"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "default": "<p>Небольшой параграф рассказывающий о специалистах курсов.</p>",
      "label": "Подзаголовок"
    },
    {
      "type": "text",
      "id": "tag_content",
      "default": "Специалисты Skills Beauty",
      "label": "Тег"
    },

    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 256,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 128
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 256,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 128
    }
  ],
  "presets": [
    {
      "name": "Команда"
    }
  ]
}
{% endschema %}
