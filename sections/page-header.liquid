{{ 'page-header.css' | asset_url | stylesheet_tag }}

<div class="layout_12col">
  <div class="page-header_heading-wrap">
    <h1>{{ section.settings.heading }}</h1>
  </div>
</div>

{% schema %}
{
  "name": "page-header",
  "tag": "section",
  "class": "page-header",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.page-header.settings.image.label"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Courses",
      "label": "t:sections.page-header.heading.label"
    }
  ]
}
{% endschema %}
