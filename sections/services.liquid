{{ 'section.css' | asset_url | stylesheet_tag }}
{{ 'service.css' | asset_url | stylesheet_tag }}

{% render 'section-padding' %}

<div class="section-{{ section.id }}-padding color-{{ section.settings.section_color_scheme }}" id="services">
  <div class="page-width">
    <div class="layout_12col">
      <div class="section_heading-wrap">
        {% render 'tag-component', tag_content: section.settings.tag_content %}
        <h2>{{ section.settings.heading }}</h2>
      </div>
      <div class="section_subheading-wrap subtitle services-subheading">
        {{ section.settings.subheading }}
      </div>
      <div class="service_list">
        {% for block in section.blocks %}
          <a href="{{ block.settings.link }}" class="button is-service" target="_blank">
            {{ block.settings.label }}
            {% render 'icon-arrow-up-right' %}
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Сервисы",
  "tag": "section",
  "class": "section_services",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Page heading",
      "label": "Заголовок"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "default": "<p>Небольшой параграф рассказывающий о специалистах курсов.</p>",
      "label": "Подзаголовок"
    },
    {
      "type": "text",
      "id": "tag_content",
      "default": "Услуги Skills Beauty",
      "label": "Тег"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 256,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 128
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 256,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 128
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Кнопка",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "default": "Button label",
          "label": "Лебл кнопки"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Ссылка кнопки"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Пресет",
      "category": "Service"
    }
  ]
}
{% endschema %}
