{{ 'certificate.css' | asset_url | stylesheet_tag }}

<div class="page-width">
  <div class="layout_12col">
    <div class="section_heading-wrap">
      <h2 class="h1">Подарочный Сертификат</h2>
    </div>
    <div class="certificate_content-wrap">
      {%- for block in section.blocks -%}
        {% render 'tag-component', tag_content: block.settings.tag_content %}
      {%- endfor -%}
      <p class="subtitle">Цифровой сертификат подходит для оплаты услуг, курсов и продукции в магазине.</p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.certificate.name",
  "tag": "section",
  "class": "section_certificate",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.certificate.settings.image.label"
    },
    {
      "type": "text",
      "id": "tag_content",
      "default": "Наши задачи и цели",
      "label": "Tag Content"
    }
  ],
  "presets": [
    {
      "name": "t:sections.cerificate.presets.name"
    }
  ]
}
{% endschema %}
