{{ 'success.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <div class="layout_12col">
      <div class="success_header-img-wrap">
        {%- if section.settings.header_img != blank -%}
          {{
            section.settings.header_img
            | image_url: width: 1500
            | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
          }}
        {%- else -%}
          {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
      <div class="success_heading-wrap">
        {% render 'tag-component', tag_content: section.settings.tag_content %}
        <h2 class="h1">Наши успехи в Beauty Сфeре</h2>
        <p class="subtitle max-width-medium">Небольшой параграф про опыт работы, обучении, и тд.</p>
      </div>
      <div class="success_items">
        <div class="success_item">
          <div class="success_number">{{ section.settings['success_item-1_number'] }}</div>
          <div class="text-size-large text-weight-medium">{{ section.settings['success_item-1_text'] }}</div>
          <div class="success_button-wrap">
            {%- if section.settings['success_item-1_button_label'] != blank -%}
              <a
                {% if section.settings['success_item-1_button_link'] == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ section.settings.success_item-1_button_link }}"
                {% endif %}
                class="button button--secondary is-full-width"
                {{ section.shopify_attributes }}
              >
                {{ section.settings['success_item-1_button_label'] | escape }}
                {% render 'icon-arrow' %}
              </a>
            {%- endif -%}
          </div>
        </div>
        <div class="success_item">
          <div class="success_number">{{ section.settings['success_item-2_number'] }}</div>
          <div class="text-size-large text-weight-medium">{{ section.settings['success_item-2_text'] }}</div>
          <div class="success_button-wrap">
            {%- if section.settings['success_item-2_button_label'] != blank -%}
              <a
                {% if section.settings['success_item-2_button_link'] == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ section.settings.success_item-2_button_link }}"
                {% endif %}
                class="button button--secondary is-full-width"
                {{ section.shopify_attributes }}
              >
                {{ section.settings['success_item-2_button_label'] | escape }}
                {% render 'icon-arrow' %}
              </a>
            {%- endif -%}
          </div>
        </div>
        <div class="success_item">
          <div class="success_number">{{ section.settings['success_item-3_number'] }}</div>
          <div class="text-size-large text-weight-medium">{{ section.settings['success_item-3_text'] }}</div>
          <div class="success_button-wrap">
            {%- if section.settings['success_item-3_button_label'] != blank -%}
              <a
                {% if section.settings['success_item-1_button_link'] == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ section.settings.success_item-3_button_link }}"
                {% endif %}
                class="button button--secondary is-full-width"
                {{ section.shopify_attributes }}
              >
                {{ section.settings['success_item-3_button_label'] | escape }}
                {% render 'icon-arrow-up-right' %}
              </a>
            {%- endif -%}
          </div>
        </div>
      </div>
      <div class="success_img-wrap">
        {%- if section.settings.image != blank -%}
          {{
            section.settings.image
            | image_url: width: 1500
            | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
          }}
        {%- else -%}
          {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.success.name",
  "tag": "section",
  "class": "section_success",
  "settings": [
    {
      "type": "image_picker",
      "id": "header_img",
      "label": "t:sections.success.settings.header_img.label"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.success.settings.image.label"
    },
    {
      "type": "text",
      "id": "tag_content",
      "default": "Наши задачи и цели",
      "label": "Tag Content"
    },
    {
      "type": "text",
      "id": "success_item-1_number",
      "default": "2300+",
      "label": "Success item number"
    },
    {
      "type": "text",
      "id": "success_item-1_text",
      "default": "Счастливых клиентов",
      "label": "Success item text"
    },
    {
      "type": "text",
      "id": "success_item-1_button_label",
      "default": "О Нашей Студии",
      "label": "t:sections.all.button.button_label.label"
    },
    {
      "type": "url",
      "id": "success_item-1_button_link",
      "default": "/",
      "label": "t:sections.all.button.button_link.label"
    },
    {
      "type": "text",
      "id": "success_item-2_number",
      "default": "168+",
      "label": "Success item number"
    },
    {
      "type": "text",
      "id": "success_item-2_text",
      "default": "Проведенных оффлайн уроков",
      "label": "Success item text"
    },
    {
      "type": "text",
      "id": "success_item-2_button_label",
      "default": "Наши Курсы",
      "label": "t:sections.success.settings.success_item-2_button_label.label"
    },
    {
      "type": "url",
      "id": "success_item-2_button_link",
      "default": "/",
      "label": "t:sections.success.settings.success_item-2_button_link.label"
    },
    {
      "type": "text",
      "id": "success_item-3_number",
      "default": "100,000+",
      "label": "Success item number"
    },
    {
      "type": "text",
      "id": "success_item-3_text",
      "default": "Просмотров на Youtube",
      "label": "Success item text"
    },
    {
      "type": "text",
      "id": "success_item-3_button_label",
      "default": "Наш Youtube",
      "label": "t:sections.success.settings.success_item-3_button_label.label"
    },
    {
      "type": "url",
      "id": "success_item-3_button_link",
      "default": "/",
      "label": "t:sections.success.settings.success_item-3_button_link.label"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 256,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 128
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 256,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 128
    }
  ],
  "presets": [
    {
      "name": "t:sections.cerificate.presets.name"
    }
  ]
}
{% endschema %}
