{{ 'contact.css' | asset_url | stylesheet_tag }}

{% render 'section-padding' %}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  if section.settings.color_scheme == section.settings.section_color_scheme and section.settings.content_layout == 'no-overlap'
    assign remove_color_classes = true
  endif
-%}

<div class="section-{{ section.id }}-padding color-{{ section.settings.section_color_scheme }}" id="contact">
  <div class="page-width">
    <div class="container-medium">
      <div class="contact_content-wrap">
        <div class="section_heading-wrap">
          {% assign default_tag_content = 'sections.contact.tag_html' | t %}
          {% assign tag_content = section.settings.tag_content %}

          {% if tag_content != blank %}
            {% render 'tag-component', tag_content: tag_content %}
          {% else %}
            {% render 'tag-component', tag_content: default_tag_content %}
          {% endif %}

          <h2>{{ 'sections.contact.heading' | t }}</h2>
        </div>
        <div class="contact_socials">
          <h3>{{ 'sections.contact.heading_social' | t }}</h3>
          {% render 'social-icons', class: 'my-class' %}
        </div>
        <div class="contact_address">
          <h3>{{ 'sections.contact.heading_address' | t }}</h3>
          {{ 'shop.address_html' | t }}
        </div>
        <div class="contact_time">
          <h3>{{ 'sections.contact.heading_time' | t }}</h3>
          {{ 'shop.opening_time_html' | t }}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Контакы",
  "tag": "section",
  "class": "section_contact",
  "settings": [
    {
      "type": "text",
      "id": "tag_content",
      "default": "",
      "label": "Тег",
      "info": "Leave blank to use default translation"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Контакты",
      "label": "Заголовок"
    },
    {
      "type": "inline_richtext",
      "id": "heading_social",
      "default": "Контакты",
      "label": "Заголовок соцсетей"
    },
    {
      "type": "inline_richtext",
      "id": "heading_address",
      "default": "Адрес",
      "label": "Заголок адреса"
    },
    {
      "type": "richtext",
      "id": "text_address",
      "default": "<p>Auguste-Viktoria-Straße 7, Grunewald  14193,</p> <p>Berlin, Deutschland</p>",
      "label": "Текст адреса"
    },
    {
      "type": "inline_richtext",
      "id": "heading_time",
      "default": "Время работы",
      "label": "Заголовок времени работы"
    },
    {
      "type": "richtext",
      "id": "text_time",
      "default": "<p>Пн-Пт: 10:00-20:00</p><p>Сб: 10:00-18:00</p><p>Вc: Выходной</p>",
      "label": "Текст времени работы"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 256,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 128
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 256,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 128
    },
    {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-3"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.multirow.settings.container_color_scheme.label",
      "default": "scheme-3"
    }
  ],
  "presets": [
    {
      "name": "Контакт",
      "category": "Service"
    }
  ]
}
{% endschema %}
